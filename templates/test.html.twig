<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Prix en fonction de la longueur</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
  <div class="row">
    <div class="col">
      <form id="articleForm">
        <div class="mb-3">
          <label for="longueur" class="form-label">Longueur (en mètres) :</label>
          <input type="number" id="longueur" name="longueur" class="form-control" min="0.5" step="0.01" required>
        </div>
        <div class="mb-3">
          <label for="decoupes" class="form-label">Nombre de découpes :</label>
          <input type="number" id="decoupes" name="decoupes" class="form-control" min="0" step="1" required>
        </div>
        <div class="mb-3">
          <label for="prix" class="form-label">Prix :</label>
          <input type="text" id="prix" name="prix" class="form-control" readonly>
        </div>
        <button type="submit" class="btn btn-primary">Ajouter au panier</button>
      </form>
    </div>
  </div>
</div>

<script>
  document.getElementById('articleForm').addEventListener('submit', function(event) {
    event.preventDefault();
    var longueur = parseFloat(document.getElementById('longueur').value);
    var decoupes = parseInt(document.getElementById('decoupes').value);
    var prixTotal = longueur * decoupes * 10; // Exemple de calcul de prix : 10 € par mètre par découpe
    document.getElementById('prix').value = prixTotal.toFixed(2) + ' €';
  });
</script>

</body>
</html>
