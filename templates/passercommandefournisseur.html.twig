{% extends 'base.html.twig' %}

{% block body %}
    {% include 'navbarbackappro.html.twig' %}

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Ajout d'un fournisseur</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl7+0Hl5vHB5gzI1D4Q2VtSk/t7pM4KE6pX6/iI9n9" crossorigin="anonymous">
    </head>
    <body class="bg-dark">
        <div class="container my-5">
            <div class="container bg-primary p-5 rounded">
                <h1 class="text-center text-light">Passer commande fournisseur</h1>

                {% if app.session.flashBag.has('error') %}
                    <div class="alert alert-danger">
                        {% for message in app.session.flashBag.get('error') %}
                            {{ message }}
                        {% endfor %}
                    </div>
                {% endif %}

                {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success">
                        {% for message in app.session.flashBag.get('success') %}
                            {{ message }}
                        {% endfor %}
                    </div>
                {% endif %}

                <form method="post" action="{{ path('ajouter_fournisseur') }}">
                    <div class="mb-3">
                        <label for="nomFournisseur" class="form-label text-light">Nom du Fournisseur</label>
                        <input type="text" name="nomFournisseur" class="form-control" id="nomFournisseur" placeholder="Veuillez saisir le nom du fournisseur" required>
                    </div>
                    <div class="mb-3">
                        <label for="quantite" class="form-label text-light">Quantité</label>
                        <input type="number" name="quantite" class="form-control" id="quantite" placeholder="Veuillez saisir la quantité" required>
                    </div>
                    <div class="mb-3">
                        <label for="nomProduit" class="form-label text-light">Nom du Produit</label>
                        <input type="text" name="nomProduit" class="form-control" id="nomProduit" placeholder="Veuillez saisir le nom du produit" required>
                    </div>
                    <div class="mb-3">
                        <label for="etat" class="form-label text-light">État</label>
                        <input type="text" name="etat" class="form-control" id="etat" placeholder="Veuillez saisir l'état" required>
                    </div>
                    
                    <div class="mb-3 text-end">
                        <button type="submit" class="btn btn-light">Enregistrer</button>
                    </div>
                </form>
            </div> 
        </div>
        <footer>
            {% include 'footer.html.twig' %} 
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-eEZUnKUVEMrZqDfFZzSQxlJvK1E21PJoQx9CK2qxBn3x4I5QVbFqCr7GJ3DdP3Z" crossorigin="anonymous"></script>
    </body>
    </html>
{% endblock %}
