{% block body %}
    {% include 'navbar.html.twig' %} 
    <body style="background-color: rgb(33, 34, 61)">
    <div class="container my-5">
        <h1 class="text-center" style="background-color: white;">Gestion des Stocks</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                   
                        <th scope="col">Produit</th>
                        <th scope="col">Quantité</th>
                        <th scope="col">Entrepôt</th>
                        <th scope="col">Fournisseur</th>
                    </tr>
                </thead>
                <tbody>
                    {% for stock in stocks %}
                        <tr>
                            
                            <td>{{ stock.idProduit.nom }}</td>
                            <td>{{ stock.quantite }}</td>
                            <td>{{ stock.Entrepot.nomEntrepot }}</td>
                            <td>{{ stock.Fournisseur.nomFournisseur }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
