{% extends 'base.html.twig' %}

{% block title %}Liste des devis{% endblock %}

{% block body %}
   

    <header>
        {% include 'navbar.html.twig' %} 
        
    </header>
    <h1>Liste des devis</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Client</th>
                <th scope="col">Statut</th>
            </tr>
        </thead>
        <tbody>
            {% for devis in devis %}
                <tr>
                    <th scope="row">{{ devis.id }}</th>
                    <td>{{ devis.idclient.nom }}</td>
                    <td>{{ devis.statut }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
