{% include 'lienbootstrap.html.twig' %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha384-Q8i/Xq2AD6XxIep9tiCxS/Z9fNfEX0JKT1AZ4dU1uky1G8nVp5VWgU68V6sJs3p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.17.0/dist/css/bootstrap-icons.css">
    <title>CoupAcier</title>
</head>
<body>

<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{ path('page_accueil') }}">
        <img width="30" height="30" class="d-inline-block align-top mr-2" alt="">
         Coup'Acier
    </a>
    
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav mx-auto">
        <li class="nav-item">
            <a class="nav-link active" href="#">
                <i class="bi bi-info-circle"></i> Qui sommes nous
                <span class="visually-hidden">(current)</span>
            </a>
        </li>
    
        <li class="nav-item">
            <a class="nav-link" href="{{ path('produits') }}">
                <i class="bi bi-box"></i> Nos produits
            </a>
        </li>
    
        <li class="nav-item">
            <a class="nav-link" href="{{ path('verification') }}">
                <i class="bi bi-person"></i> Compte
            </a>
        </li>
    </ul>

    {% if app.session.get('client_id') %}
        <a href="{{ path('listedenvies') }}" class="btn btn-link">
            <i class="bi bi-heart-fill fs-4 text-danger me-1"></i> 
        </a>
    {% endif %}

    <div class="d-flex">
        <a href="{{ path('affichagepanier') }}" style="margin-right: 20px; text-decoration: none; cursor: pointer;">
            <label class="bi bi-cart4" style="font-size: 24px; color: white;">Panier()</label>
        </a>
    </div>
  </div>
</nav>

</body>
</html>
