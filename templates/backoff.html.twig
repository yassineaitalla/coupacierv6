{% include 'navbarback.html.twig' %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion Back Office</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-whTfn9V+g0+eJLmb1A+GrTxNmgPZnY7N/fp8eoMpvf5GvFFUIrvpg1d3yn5hYfl+" crossorigin="anonymous">
</head>
<body class="bg-dark">

  <div class="container my-5">
      <div class="container bg-secondary p-5 rounded">
          <h1 class="text-center text-light">Connexion Back Office</h1>


      


          <form method="post" action="{{ path('connexion_employe') }}">
              <div class="mb-3">
                  <label for="email" class="form-label text-light">E-mail</label>
                  <input type="email" name="email" class="form-control" id="email" placeholder="Veuillez saisir votre adresse mail" required>
              </div>

              <div class="mb-3">
                <label for="motdepasse" class="form-label text-light">Mot de passe</label>
                <input type="password" name="motdepasse" class="form-control" id="motdepasse" placeholder="Veuillez saisir votre mot de passe" required>
              </div>
              
              <div class="mb-3 text-center">
                <a href="{{ path('motdepasseoublie') }}" class="text-light">Mot de passe oubli√© ?</a>
              </div>

              {% for message in app.flashes('success') %}
              <div class="alert alert-success" role="alert">
                  {{ message }}
              </div>
            {% endfor %}

              <div class="mb-3 text-center">
                <button type="submit" class="btn btn-light">Connexion</button>
              </div>
          </form>
      </div>
  </div>

  {% for message in app.flashes('error') %}
  <div class="alert alert-danger" role="alert">
      {{ message }}
  </div>
{% endfor %}

  <footer class="text-center text-light mt-5">
    {% include 'footer.html.twig' %} 
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-ppxrHe/j6lcDxPENMeZsI+e1j+5CzA4HFO7Wp+pFurA6/Z6QRwtCx1zvQ4J03l85" crossorigin="anonymous"></script>
</body>
</html>
